<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label Content="Contract :" HorizontalAlignment="Left" Margin="105,42,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.141,-0.202" Width="93"/>
        <ComboBox x:Name="contracts" HorizontalAlignment="Left" Margin="203,46,0,0" VerticalAlignment="Top" Width="194"/>
        <Label Content="Station :" HorizontalAlignment="Left" Margin="105,95,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.141,-0.202" Width="93"/>
        <ComboBox x:Name="stations" HorizontalAlignment="Left" Margin="203,99,0,0" VerticalAlignment="Top" Width="194"/>
        <TextBlock x:Name="resultBox" HorizontalAlignment="Left" Margin="86,153,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="101" Width="341"/>
        <ProgressBar x:Name="progress" HorizontalAlignment="Left" Height="5" VerticalAlignment="Top" Width="517" Foreground="#FF0672B0"/>
        <Button Content="Refresh cache" HorizontalAlignment="Left" Margin="86,289,0,0" VerticalAlignment="Top" Width="341" Click="RefreshCache"/>
    </Grid>
</Window>
